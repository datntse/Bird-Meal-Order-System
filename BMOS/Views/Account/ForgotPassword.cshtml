
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!--<link rel="stylesheet" href="css/reset.css">-->
    <link rel="stylesheet" href="~/css/forgot.css">
    <title>Quên mật khẩu</title>
</head>
<body>
    @if (ViewBag.ConfirmForgotSuccess != null)
    {   
                <style>
                    .alert {
                        width: 40%;
                        margin: 10px auto;
                        padding: 20px;
                        background-color: green;
                        color: white;
                        text-align: center;
                    }

                    .closebtn {
                        margin-left: 15px;
                        color: white;
                        font-weight: bold;
                        float: right;
                        font-size: 1.4rem;
                        line-height: 20px;
                        cursor: pointer;
                        transition: 0.3s;
                    }
                    
                    .link {
                        color: black;
                        font-weight: bold;
                        font-size: 1.4rem;
                        line-height: 20px;
                        cursor: pointer;
                        text-decoration: none;
                    }

                    .closebtn:hover {
                        color: black;
                    }
                </style>

                <div class="alert success">
                    <span class="closebtn" onclick="this.parentElement.style.display='none';">&times;</span>  
                    <strong>@ViewBag.ConfirmForgotSuccess <a href="https://mail.google.com/mail" class="link">Email</a> để xác nhận tiến trình.</strong> 
                </div>
    }
    <div id="wrapper">
        <div id="form-forgot">
            
            <div class="forgot-account">
                <form action="~/Account/ForgotPassword" method="post">           
                    <h2>Quên mật khẩu</h2>
                    <style>
                        .notice {
                            display: flex;
                            justify-content: center;
                            align-items: center;
                        }

                        .notice_text {
                            color: red;
                            font-family: Arial, Helvetica, sans-serif;
                            font-style: normal;
                            font-size: 1rem;
                            margin-top: 15px;
                        }

                        #form-forgot {
                            max-width: 490px;
                            max-height: 800px;
                        }
                    </style>
                    
                    @if (ViewBag.ErrorConfirmForogot != null)
                    {
                        <div class="notice">
                            <span class="notice_text">@ViewBag.ErrorConfirmForogot</span>
                        </div>
                    }
                    
                    <div class="others-text">
                        <p>
                            Tạo tài khoản để quản lý đơn hàng, và các thông tin thanh toán, gửi hàng một cách đơn giản hơn.
                        </p>
                    </div>
                    <div class="form-group">
                        <label for="username"></label>
                        <input type="email" name="username" value="" class="input input--username" placeholder="E-mail" required>
                    </div>

                    <div class="form-group">
                        <div class="action">
                            <button type="submit" id="submit" class="submit btn-forgot"><b>Gửi</b></button>
                            <a href="~/Account/Login" class="submit btn-login"><b>Hủy</b></a>
                        </div>
                        
                    </div>                  
                </form>
            </div>

            <div class="forgot-social">
                <div class="recommend">
                    <div class="line">
                        <span class="text">Hoặc đăng nhập qua</span>
                    </div>
                </div>
                <div class="icon">
                    <a href="http://" class="login-icon"><img width="150px" height="40px" src="~/images/fb.png" alt=""></a>
                    <a href="http://" class="login-icon"><img width="150px" height="40px" src="~/images/gg.png" alt=""></a>
                </div>
            </div>

            <div class="others">                
                <div class="others-button">
                    <a href="~/Account/Register" class="btn btn-name"><b>Tạo tài khoản mới</b></a>               
                    <a href="~/Home/Index" class="btn btn-name"><b>Trở về Trang Chủ</b></a>             
                </div>               
            </div>
        </div>
    </div>
</body>
</html>
