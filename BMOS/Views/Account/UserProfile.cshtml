
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="content">
        <div class="row userprofile">
            <div class="col-12 userprofile_title" style="font-weight: bold;">Trang chủ/ chỉnh sửa người dùng</div>
        </div>
        <div class="row userinfo">
            <div class="col-7 userprofile_info">
                <div class="row userprofile_info_wel">
                    <div class="col-6">
                        <div class="userprofile_info_wel_history">
                            <img src="~/images/history.png" alt="" srcset="">
                            <h3 style="font-weight: bold; margin-top: 10px;">Lịch sử đơn hàng</h3>
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="userprofile_info_wel_welcome">
                            <img src="~/images/user-icon.png" alt="" srcset="">
                            <h3 style="font-weight: bold; margin-top: 10px;">Xin chào, <Span>@ViewBag.User</Span></h3>
                        </div>
                    </div>
                </div>
                <div class="userprofile_info_wel_profile">
                    <h3 style="color: rgb(247, 157, 40); font-weight: bold;"><b>Thông tin</b></h3>
                    <div class="userprofile_info_wel_profile_i">
                        <h4><b>Họ và tên:</b> <span style="font-weight: bold;"> Phan Van Cuong</span><br></h4>
                        <h4 style="margin-top: 7px"><b>Email:</b> <span style="font-weight: bold;"> cuongpvpvc@gmail.com</span><br></h4>
                        <h4 style="margin-top: 7px"><b>Số điện thoại:</b> <span style="font-weight: bold;"> 1234567890</span> <br></h4>
                        <h4 style="margin-top: 7px"><b>Địa chỉ:</b> <span style="font-weight: bold;"> Vinhome Grank Park</span></h4>
                    </div>
                </div>
            </div>
            <div class="col-5">
                <div class="userprofile_bar">
                    <div class="userprofile_bar_profile">
                        <img src="~/images/user-icon.png" alt="" srcset="">
                        <a href="~/Account/UserProfile" target="" style="color: orange; font-weight: bold;">Hồ sơ</a>
                    </div>
                    <div class="userprofile_bar_profile">
                        <img src="~/images/locationmanege.png" alt="" srcset="">
                        <a href="~/Account/UserLocation" target="" style="font-weight: bold;">Cài đặt địa chỉ</a>
                    </div>
                    <div class="userprofile_bar_profile">
                        <img src="~/images/reset-password.png" alt="" srcset="">
                        <a href="~/Account/UserChangePassword" target=""><b>Đổi mật khẩu</b></a>
                    </div>
                    <div class="userprofile_bar_profile">
                        <img src="~/images/logout.png" alt="" srcset="">
                        <a href="~/Account/Logout" target="" style="font-weight: bold;">Đăng xuất</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

