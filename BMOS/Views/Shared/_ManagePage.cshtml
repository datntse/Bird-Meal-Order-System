@{
	<!doctype html>
	<html lang="en">
	<head>
		<meta charset="utf-8">
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<meta name="description" content="">
		<meta name="author" content="Mark Otto, Jacob Thornton, and Bootstrap contributors">
		<meta name="generator" content="Hugo 0.84.0">
		<title>manage account</title>

		<link rel="canonical" href="https://getbootstrap.com/docs/5.0/examples/sidebars/">
		<link rel="stylesheet" href="~/css/manage_page.css" asp-append-version="true" />
		<script src="~/ckeditor/ckeditor.js"></script>


		<!-- Bootstrap core CSS -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
		<style>
			.bd-placeholder-img {
				font-size: 1.125rem;
				text-anchor: middle;
				-webkit-user-select: none;
				-moz-user-select: none;
				user-select: none;
			}

		</style>


		<!-- Custom styles for this template -->
		<link href="sidebars.css" rel="stylesheet">
	</head>
	<body>


		<main>
			<div class="d-flex flex-column flex-shrink-0 p-3 text-white bg-dark managebar" style="width: 18rem;">
				<a href="/" class="d-flex align-items-center mb-3 mb-md-0 me-md-auto text-white text-decoration-none">
					<i class="fa-solid fa-bars" style="font-size: 2rem;"></i>
					<strong class="fs-4" style="padding-left: 10px;">Bảng điều khiển</strong>
				</a>
				<hr>
				<ul class="nav nav-pills flex-column mb-auto">
					<li>
						<a href="#" class="nav-link text-white">
							<i class="fa-solid fa-chart-line" style="font-size: 1rem;"></i>
							<span style="padding-left: 10px;">Dashboard</span>
						</a>
					</li>
					<li>
						<a asp-controller="AccountManage" asp-action="Index" class="nav-link text-white">
							<i class="fa-solid fa-users-gear" style="font-size: 1rem;"></i>
							<span style="padding-left: 10px;">Quản lý tài khoản</span>
						</a>
					</li>
					<li>
						<a asp-controller="ProductManager" asp-action="Index" class="nav-link text-white">
							<i class="fa-solid fa-cookie-bite" style="font-size: 1rem;"></i>
							<span style="padding-left: 10px;">Quản lý sản phẩm</span>
						</a>
					</li>
					<li>
						<a asp-controller="OrderManage" asp-action="Index" class="nav-link text-white">
							<i class="fa-solid fa-file-lines" style="font-size: 1rem;"></i>
							<span style="padding-left: 10px;">Quản lý đơn hàng</span>
						</a>
					</li>
					<li class="nav-item">
						<a asp-controller="BlogManage" asp-action="BlogManage" class="nav-link active" aria-current="page">
							<i class="fa-solid fa-blog" style="font-size: 1rem;"></i>
							<span style="padding-left: 10px;">Quản lý Blog</span>
						</a>
					</li>
					<li class="nav-item">
						<a asp-controller="OrderManage" asp-action="Index" class="nav-link text-white">
							<i class="fa-solid fa-message" style="font-size: 1rem;"></i>
							<span style="padding-left: 10px;">Quản lý đánh giá</span>
						</a>
					</li>
					<li class="nav-item">
						<a asp-controller="RefundsManage" asp-action="Index" class="nav-link text-white" aria-current="page">
							<i class="fa-solid fa-phone-volume" style="font-size: 1rem;"></i>
							<span style="padding-left: 10px;">Quản lý trả hàng</span>
						</a>
					</li>
				</ul>
				<hr>
				<div class="dropdown">
					<a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
						<i class="fa-regular fa-user" style="font-size: 32px;" class="rounded-circle me-2"></i>
						<strong style="padding-left: 10px;">User</strong>
					</a>
					<ul class="dropdown-menu dropdown-menu-dark text-small shadow" aria-labelledby="dropdownUser1">
						<li><a class="dropdown-item" href="#">New project...</a></li>
						<li><a class="dropdown-item" href="#">Settings</a></li>
						<li><a class="dropdown-item" href="#">Profile</a></li>
						<li><hr class="dropdown-divider"></li>
						<li><a class="dropdown-item" href="#">Sign out</a></li>
					</ul>
				</div>
			</div>

			<div class="b-example-divider"></div>

			<div class="container">
				<div class="manage_account">
					<form style=" display:flex;" class="col-9 header-searchform">
						<div class="header-searchform--input">
							<input class="header-search__form--input-field" style="margin-left:32px; width:70rem;" name="searchString" value="@ViewData["CurrentFilter"]" placeholder="Gõ từ khóa bạn muốn tìm kiếm...">
						</div>
						<button class="header-search_form--button" style="padding-left:10px; background-color: rgba(0,0,0,0);outline: none;border: none;">
							<i class="fa-solid fa-magnifying-glass"></i>
						</button>
					</form>
				</div>
				<div class="manage_account_table">
					<table class="table">
						<thead class="bg-light">
							@RenderBody()
					</table>
				</div>

			</div>
		</main>

		<script src="https://kit.fontawesome.com/e553a39b7e.js" crossorigin="anonymous"></script>
		<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>

		<script src="sidebars.js"></script>
		@RenderSection("Scripts",false)
	</body>
	</html>

}