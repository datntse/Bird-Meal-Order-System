@model BMOS.Models.Entities.TblUser

@{
    Layout = "_ManagePage";
    ViewData["Title"] = "Account Manage";
}




<h1>Tạo tài khoản nhân viên</h1>


<hr />
<div class="row">
    <div class="col-md-4" style="width:100%">
        <form asp-action="Create" enctype="multipart/form-data">
            <div class="form-group">
                <label asp-for="Username" class="control-label">Email</label>
                <input asp-for="Username" class="form-control" />
                <span asp-validation-for="Username" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Mật Khẩu</label>
                <input asp-for="Password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IsConfirm" class="control-label">Xác nhận tài khoản</label>
                <select asp-for="IsConfirm" class="form-control" readonly>
                    <option value="true">Đã xác nhận</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label">Họ</label>
                <input asp-for="Firstname" class="form-control" />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label">Tên</label>
                <input asp-for="Lastname" class="form-control" />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Numberphone" class="control-label">Số Điện Thoại</label>
                <input asp-for="Numberphone" class="form-control" />
                <span asp-validation-for="Numberphone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">Địa Chỉ</label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Status" class="control-label">Trạng Thái</label>
                <select asp-for="Status" class="form-control" readonly>
                    <option value="true">Hoạt động</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="UserRoleId" class="control-label">Vai trò</label>
                <select asp-for="UserRoleId" class="form-control" readonly>
                    <option value="true">Nhân Viên</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </div>
        </form>
    </div>
</div>