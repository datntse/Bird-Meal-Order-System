@model X.PagedList.IPagedList<BMOS.Models.Entities.TblBlog>
@using X.PagedList.Mvc;
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common;
@{
	Layout = "_BlogsManagePage";
	ViewData["Title"] = "BlogManage";
}
<ul style="font-size:1rem;list-style:none; display:flex;">
	<span>Sắp xếp:</span>
	<li style="padding-left: 5px;">
		<a asp-action="BlogManage" asp-route-sortOrder="@ViewData["NameSortParm"]" asp-route-searchString="@ViewData["SearchParameter"]">A-Z</a> |
	</li>
	<li style="padding-left: 5px;">
		<a asp-action="BlogManage" asp-route-sortOrder="@ViewData["NameDescSortParm"]" asp-route-searchString="@ViewData["SearchParameter"]">Z-A</a> |
	</li>
	<li style="padding-left: 5px;">
		<a asp-action="BlogManage" asp-route-sortOrder="@ViewData["DateSortParm"]" asp-route-searchString="@ViewData["SearchParameter"]">Cũ nhất</a> |
	</li>
	<li style="padding-left: 5px;">
		<a asp-action="BlogManage" asp-route-sortOrder="@ViewData["DateDescSortParm"]" asp-route-searchString="@ViewData["SearchParameter"]">Mới nhất</a>
	</li>
	<li>
		<a style="font-size: 1rem; text-decoration: none;margin-left:47rem;" asp-controller="Blog" asp-action="BlogManage">Xóa tìm kiếm</a>
	</li>
</ul>
<h1>Blog Manage</h1>

<p>
	<a asp-action="Create">Create New</a>
</p>
<table class="table">
	<thead>
		<tr>
			<th>ID</th>
			<th>Tên Blog</th>
			<th>Thời gian</th>
			<th>Trạng Thái</th>
			<th></th>


		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>
					@Html.DisplayFor(xx => item.BlogId)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Name)
				</td>
				<td>
					@Html.DisplayFor(modelItem => item.Date)
				</td>
				<td>
					@{
						if ((item.Status) == true)
						{
							<p style="color:green;">Hoạt động </p>

						}
						else
						{
							<p style="color:red">Không hoạt động </p>
						}
					}
				</td>

				<td>
					<a asp-action="Edit" asp-route-id="@item.BlogId">Edit</a> |
					<a asp-action="Details" asp-route-id="@item.BlogId">Details</a> |
					<a asp-action="Delete" asp-route-id="@item.BlogId">Delete</a>
				</td>

			</tr>
		}

	</tbody>


</table>
<div style="font-size:1rem; margin-bottom:2rem; margin-left:1rem;">
	@Html.PagedListPager(Model, page => Url.Action("BlogManage",
	new { page, sortOrder = ViewBag.CurrentSort, currentFilter = ViewBag.CurrentFilter }),
	new PagedListRenderOptions {
	LiElementClasses = new string[] { "page-item" },
	PageClasses = new string[] { "page-link" }
	})

</div>